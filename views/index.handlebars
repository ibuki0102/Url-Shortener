<div
  class='container d-flex flex-column align-items-center mt-5'
  style='width:600px;'
>
  <h1 class='header'>
    URL Shortener
  </h1>
  <img
    src='https://assets-lighthouse.alphacamp.co/uploads/image/file/16716/ExportedContentImage_00.png'
    alt=''
    width='200px'
  />
  <form action='/urlShortener' class='mt-3 d-flex flex-column' method='post'>
    <input
      type='text'
      class='form-control'
      style='width:500px;'
      name='url'
      placeholder='Input URL here'
    />
    {{#if invalidInput}}
      <div class='alert alert-danger mt-2' role='alert'>
        不可輸入空白網址!
      </div>
    {{/if}}
    <button
      class='btn btn-outline-primary m-auto mt-3'
      type='submit'
    >Shorten</button>
  </form>
  {{#if shortenedUrl}}
    <h2>Success! Please use this link:</h2>
    <h3>{{shortenedUrl}}</h3>{{/if}}
</div>